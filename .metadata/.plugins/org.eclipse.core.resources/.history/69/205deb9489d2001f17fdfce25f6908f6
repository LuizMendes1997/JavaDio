package Projeto.labirinto.modelo;
package Projeto.labirinto.excecao.SairException;
import java.util.*;
import java.util.function.Predicate;

import br.com.cod3r.cm.excecao.SairException;
import br.com.cod3r.cm.modelo.Campo;

public class Tabuleiro {

	private int linhas;
	private int colunas;
	private int paredes;
	private final List<Campo> campos = new ArrayList<>();
	public Tabuleiro(int linhas, int colunas, int paredes) {
		super();
		this.linhas = linhas;
		this.colunas = colunas;
		this.paredes = paredes;
		gerarCampos();
		associarOsVizinhos();
		sortearParedes();
	}
	private void gerarCampos() {
		for(int i=0; i<linhas; i++) {
			for(int j=0; j<colunas; j++) {
				campos.add(new Campo(i,j));
			}}}
	private void associarOsVizinhos() {
		for(Campo c1: campos) {
			for(Campo c2: campos) {
				c1.adicionarVizinho(c2);
			}}}
	private void sortearParedes() {
		long paredesFeitas =0;
		Predicate<Campo> murado = c -> c.isMurado();
		
		do {
			int aleatorio = (int) (Math.random() * campos.size());
			campos.get(aleatorio).murar();
			paredesFeitas = campos.stream().filter(murado).count();
		}while(paredesFeitas < paredes);
		}
	public boolean objetivoAlcancado() {
		return campos.stream().allMatch(c -> c.objetivoAlcanÃ§ado());
	}
	public void reiniciar() {
		campos.stream().forEach(c -> c.reiniciar());
		sortearParedes();
	}
	public void abrir(int linha, int coluna) {
		try {
			campos.parallelStream()
			.filter(c -> c.getLinha() == linha && c.getColuna() == coluna)
			.findFirst()
			.ifPresent(c -> c.abrir());
			
			
		}catch(SairException e) {
			campos.forEach(c -> c.setAberto(true));
		throw e;
	}}
	
	
}

package Projeto.FundamentosJava;

import java.util.Locale;
import java.util.Scanner;

public class ProjetoContaBancaria {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in).useLocale(Locale.US);
		
		String nome; Double saldo; String agencia; int numero;
		
		System.out.println("Digite seu nome:");
		nome = scanner.next();
		
		System.out.println("Digite a sua agencia:");
		nome = scanner.next();
		
		System.out.println("Digite o numero da sua agencia:");
		nome = scanner.next();
		
		System.out.println("Digite o saldo da sua conta:");
		nome = scanner.next();
		
		System.out.println("Ola {0}, obrigado por criar uma conta em nosso banco, sua agencia é {1}, conta {2} e seu saldo {3} ja está disponivel para saque." + nome, agencia, numero, saldo);
	
		
		
		
	}
}
